GET     /countries                  controllers.CountriesController.index
GET     /countries/:id              controllers.CountriesController.show(id: Long)
POST    /countries                  controllers.CountriesController.create
DELETE  /countries/:id              controllers.CountriesController.destroy(id: Long)
PATCH   /countries/:id              controllers.CountriesController.update(id: Long)
PUT     /countries/:id              controllers.CountriesController.update(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
